{
  "name": "resoftware-org/hipitrekk",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "npx prettier --write resources/themes/anchor/",
    "dev": "vite",
    "build": "vite build"
  },
  "devDependencies": {
    "@shufo/prettier-plugin-blade": "^1.16.1",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.16",
    "alpinejs": "^3.4.2",
    "autoprefixer": "^10.4.19",
    "axios": "^1.8.2",
    "laravel-vite-plugin": "^1.0",
    "postcss": "^8.4.38",
    "postcss-nesting": "^12.1.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^3.4.3",
    "vite": "^6.2"
  },
  "prettier": {
    "tabWidth": 4,
    "bracketSpacing": true,
    "endOfLine":"lf",
    "htmlWhitespaceSensitivity": "css",
    "printWidth": 300,
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "plugins": [
      "@shufo/prettier-plugin-blade",
      "prettier-plugin-tailwindcss"
    ],
    "overrides": [
      {
        "files": ["*.blade.php"],
        "options": {
          "parser": "blade",
          "sortTailwindcssClasses": true
        }
      }
    ],
    "tailwindConfig": "./tailwind.config.js"
  }
}
